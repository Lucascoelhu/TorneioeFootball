<script type="module">
    import { initializeApp } from "https://www.gstatic.com/firebasejs/9.17.1/firebase-app.js";
    import { getFirestore, collection, addDoc, onSnapshot, updateDoc, doc, getDocs, writeBatch, deleteDoc, query, where, getDoc } from "https://www.gstatic.com/firebasejs/9.17.1/firebase-firestore.js";
    import { getAuth, signInWithEmailAndPassword, createUserWithEmailAndPassword, onAuthStateChanged, signOut } from "https://www.gstatic.com/firebasejs/9.17.1/firebase-auth.js";

    const firebaseConfig = {
        apiKey: "AIzaSyBeJNb65kjFuC-qvbmvnNpBYZNcCG7Zjwg",
        authDomain: "efootball-pro-venda.firebaseapp.com",
        projectId: "efootball-pro-venda",
        storageBucket: "efootball-pro-venda.firebasestorage.app",
        messagingSenderId: "718903184280",
        appId: "1:718903184280:web:b028397ff37450fd7cb9ed"
    };

    const app = initializeApp(firebaseConfig);
    const db = getFirestore(app);
    const auth = getAuth(app);

    let isAdmin = false;
    let currentUser = null;
    let isPro = false;
    let globalPlayers = [];
    let allMatches = [];
    let currentMatchId = null;

    // --- AUTENTICA√á√ÉO E PLANO ---
    onAuthStateChanged(auth, async (user) => {
        if (user) {
            currentUser = user;
            const userRef = doc(db, "usuarios", user.uid);
            const userSnap = await getDoc(userRef);
            
            if (userSnap.exists() && userSnap.data().plan === "pro") {
                isPro = true;
                document.getElementById('limit-info').innerText = "PLANO: PROFISSIONAL ‚ö°";
                document.getElementById('limit-info').style.color = "var(--primary)";
                document.getElementById('btn-upgrade-link').style.display = 'none';
            } else {
                isPro = false;
                document.getElementById('limit-info').innerText = "PLANO: GR√ÅTIS (LIMITE 4)";
            }

            document.getElementById('auth-screen').style.display = 'none';
            document.getElementById('user-tag').innerText = user.email.split('@')[0].toUpperCase();
            document.getElementById('share-url').innerText = window.location.origin + window.location.pathname + "?league=" + user.uid;
            initData();
        } else {
            document.getElementById('auth-screen').style.display = 'flex';
        }
    });

    document.getElementById('btn-login').onclick = async () => {
        const e = document.getElementById('auth-email').value;
        const p = document.getElementById('auth-pw').value;
        try { await signInWithEmailAndPassword(auth, e, p); } 
        catch { try { await createUserWithEmailAndPassword(auth, e, p); } catch { alert("Erro login."); } }
    };

    window.logout = () => signOut(auth);

    // --- CARREGAMENTO DE DADOS (ISOLADO POR OWNER) ---
    function initData() {
        const urlParams = new URLSearchParams(window.location.search);
        const ownerId = urlParams.get('league') || (currentUser ? currentUser.uid : null);
        if(!ownerId) return;

        const qP = query(collection(db, "jogadores"), where("owner", "==", ownerId));
        onSnapshot(qP, (snap) => {
            globalPlayers = snap.docs.map(d => ({ id: d.id, ...d.data() }));
            globalPlayers.sort((a,b) => b.pts - a.pts || b.sg - a.sg || (b.gp || 0) - (a.gp || 0));
            renderLeaderboard();
            updateAdminList();
        });

        const qM = query(collection(db, "partidas"), where("owner", "==", ownerId));
        onSnapshot(qM, (snap) => {
            allMatches = snap.docs.map(d => ({id: d.id, ...d.data()}));
            renderResultsByRound();
            if(document.getElementById('confrontos-content').style.display === 'block') renderMatchesByPlayer();
        });
    }

    // --- ADMIN E REGRAS ---
    window.showAuth = () => document.getElementById('admin-auth').style.display = 'flex';
    window.checkAuth = () => {
        if(document.getElementById('admin-pass').value === "9498") {
            isAdmin = true;
            document.getElementById('admin-panel').style.display = 'block';
            document.getElementById('admin-auth').style.display = 'none';
        } else alert("Erro PIN");
    };

    window.addPlayer = async () => {
        if(!isPro && globalPlayers.length >= 4) return alert("Limite 4 jogadores atingido. Vire PRO!");
        const n = document.getElementById("new-player-name").value;
        if(n) await addDoc(collection(db, "jogadores"), { nome: n, pts:0, v:0, e:0, d:0, sg:0, gp:0, owner: currentUser.uid });
        document.getElementById("new-player-name").value = "";
    };

    // --- RENDERIZA√á√ÉO ---
    function renderLeaderboard() {
        document.querySelector("#leaderboard tbody").innerHTML = globalPlayers.map((p, i) => `
            <tr>
                <td style="color:var(--primary); font-weight:800;">${i+1}¬∫</td>
                <td class="name-td">${p.nome}</td>
                <td style="color:var(--primary); font-weight:900;">${p.pts}</td>
                <td>${p.v}</td><td>${p.e}</td><td>${p.d}</td><td>${p.sg}</td><td>${p.gp || 0}</td>
            </tr>`).join('');
    }

    function renderResultsByRound() {
        const container = document.getElementById("results-by-round");
        if(allMatches.length === 0) return container.innerHTML = "";
        const groups = {};
        allMatches.forEach(m => {
            const label = `RODADA ${m.rodada} (${m.turno === 1 ? 'IDA' : 'VOLTA'})`;
            if(!groups[label]) groups[label] = { turno: m.turno, rodada: m.rodada, games: [], hasStarted: false };
            groups[label].games.push(m);
            if(m.status === 'done') groups[label].hasStarted = true;
        });
        const sorted = Object.keys(groups).sort((a,b) => groups[a].turno - groups[b].turno || groups[a].rodada - groups[b].rodada);
        container.innerHTML = sorted.filter(l => groups[l].hasStarted || isAdmin).map(label => `
            <div class="rodada-group">
                <div class="rodada-label">${label}</div>
                ${groups[label].games.map(m => `
                    <div class="match-item">
                        <span class="p-name" style="text-align:right">${m.p1}</span>
                        <span class="p-score ${m.status !== 'done' ? 'open' : ''}" onclick="${isAdmin ? `openScoreModal('${m.id}')` : ''}">
                            ${m.status === 'done' ? `${m.g1} - ${m.g2}` : 'VS'}
                        </span>
                        <span class="p-name" style="text-align:left">${m.p2}</span>
                    </div>`).join('')}
            </div>`).join('');
    }

    window.toggleConfrontos = () => {
        const el = document.getElementById('confrontos-content');
        el.style.display = el.style.display === 'block' ? 'none' : 'block';
        if(el.style.display === 'block') renderMatchesByPlayer();
    };

    window.renderMatchesByPlayer = () => {
        const container = document.getElementById("matches-by-player");
        const search = document.getElementById("search-input").value.toLowerCase();
        let players = [...globalPlayers].filter(p => p.nome.toLowerCase().includes(search));
        container.innerHTML = players.map(player => {
            const pM = allMatches.filter(m => m.p1 === player.nome || m.p2 === player.nome);
            const renderM = (m) => `
                <div class="match-item">
                    <span class="p-name" style="text-align:right">${m.p1}</span>
                    <span class="p-score ${m.status !== 'done' ? 'open' : ''}" onclick="${isAdmin ? `openScoreModal('${m.id}')` : ''}">
                        ${m.status==='done' ? `${m.g1} - ${m.g2}` : 'VS'}
                    </span>
                    <span class="p-name" style="text-align:left">${m.p2}</span>
                </div>`;
            return `<button class="player-header" onclick="this.nextElementSibling.style.display = (this.nextElementSibling.style.display==='none'?'block':'none')">${player.nome.toUpperCase()} <i class="fas fa-chevron-down"></i></button>
                    <div class="player-content" style="display:none">
                        <div class="turno-header">PRIMEIRO TURNO</div>${pM.filter(m=>m.turno===1).map(renderM).join('')}
                        <div class="turno-header">SEGUNDO TURNO</div>${pM.filter(m=>m.turno===2).map(renderM).join('')}
                    </div>`;
        }).join('');
    };

    // --- PLACAR ---
    window.openScoreModal = (id) => {
        const m = allMatches.find(x => x.id === id);
        currentMatchId = id;
        document.getElementById('modal-p1').innerText = m.p1;
        document.getElementById('modal-p2').innerText = m.p2;
        document.getElementById('input-g1').value = m.status === 'done' ? m.g1 : "";
        document.getElementById('input-g2').value = m.status === 'done' ? m.g2 : "";
        document.getElementById('score-modal').style.display = 'flex';
    };

    window.closeScoreModal = () => document.getElementById('score-modal').style.display = 'none';

    window.saveScore = async () => {
        const g1 = parseInt(document.getElementById('input-g1').value);
        const g2 = parseInt(document.getElementById('input-g2').value);
        if(isNaN(g1) || isNaN(g2)) return;
        await updateDoc(doc(db, "partidas", currentMatchId), { g1, g2, status: 'done' });
        closeScoreModal();
        recalculateTable();
    };

    async function recalculateTable() {
        const batch = writeBatch(db);
        for(let p of globalPlayers) {
            let s = { pts:0, v:0, e:0, d:0, sg:0, gp:0 };
            allMatches.filter(m => m.status === 'done').forEach(m => {
                if(m.p1 === p.nome) { s.gp += m.g1; s.sg += (m.g1 - m.g2); if(m.g1>m.g2) {s.pts+=3; s.v++;} else if(m.g1===m.g2) {s.pts+=1; s.e++;} else s.d++; }
                else if(m.p2 === p.nome) { s.gp += m.g2; s.sg += (m.g2 - m.g1); if(m.g2>m.g1) {s.pts+=3; s.v++;} else if(m.g1===m.g2) {s.pts+=1; s.e++;} else s.d++; }
            });
            batch.update(doc(db, "jogadores", p.id), s);
        }
        await batch.commit();
    }

    // --- SORTEIO E RESET ---
    window.sortearTorneio = async () => {
        if(!confirm("Gerar nova tabela?")) return;
        const batch = writeBatch(db);
        allMatches.forEach(m => batch.delete(doc(db, "partidas", m.id)));
        let p = [...globalPlayers];
        if (p.length % 2 !== 0) p.push({ nome: "FOLGA", id: "bye" });
        const n = p.length;
        for (let r = 0; r < n - 1; r++) {
            for (let i = 0; i < n / 2; i++) {
                const p1 = p[i], p2 = p[n-1-i];
                if (p1.id !== "bye" && p2.id !== "bye") {
                    batch.set(doc(collection(db, "partidas")), { p1:p1.nome, p2:p2.nome, g1:0, g2:0, status:'open', turno:1, rodada:r+1, owner:currentUser.uid });
                    batch.set(doc(collection(db, "partidas")), { p1:p2.nome, p2:p1.nome, g1:0, g2:0, status:'open', turno:2, rodada:r+1, owner:currentUser.uid });
                }
            }
            p.splice(1, 0, p.pop());
        }
        await batch.commit();
    };

    window.confirmReset = async () => {
        if(confirm("ZERAR?")) {
            const batch = writeBatch(db);
            allMatches.forEach(m => batch.delete(doc(db,"partidas",m.id)));
            globalPlayers.forEach(p => batch.update(doc(db,"jogadores",p.id), {pts:0, v:0, e:0, d:0, sg:0, gp:0}));
            await batch.commit();
        }
    };

    window.updateAdminList = () => {
        document.getElementById("admin-players-list").innerHTML = globalPlayers.map(p => `
            <div style="display:flex; justify-content:space-between; padding:10px; border-bottom:1px solid #222; font-size:11px;">
                <span>${p.nome}</span>
                <i class="fas fa-trash" style="color:red;" onclick="deletePlayer('${p.id}')"></i>
            </div>`).join('');
    };

    window.deletePlayer = async (id) => { if(confirm("Excluir?")) await deleteDoc(doc(db, "jogadores", id)); };

    window.shareResultsWhatsApp = () => {
        let t = "*üèÜ EFOOTBALL LEAGUE*\n\n";
        allMatches.filter(m => m.status === 'open').slice(0,10).forEach(m => {
            t += `‚è≥ ${m.p1} vs ${m.p2}\n`;
        });
        window.open(`https://api.whatsapp.com/send?text=${encodeURIComponent(t)}`);
    };
</script>
</body>
</html>
